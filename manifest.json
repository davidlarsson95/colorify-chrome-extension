{
  "manifest_version": 2,

  "name": "Colorify",
  "description": "Color tool for assistance with colors when browsing!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/samplerDOM.js"]
    }

  ]
}
